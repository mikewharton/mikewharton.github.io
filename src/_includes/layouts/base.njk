<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title | default("Site") }}</title>

  <!-- Favicon and static assets use pathPrefix so project/user pages both work -->
  <link rel="icon" href="{{ pathPrefix }}favicon.svg" type="image/svg+xml">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ pathPrefix }}style.css">
  <script src="{{ pathPrefix }}script.js" defer></script>
</head>
<body>
  {% include "header.njk" %}

  <main id="site-main">
    <section class="hero">
      <h1 class="hero-title">{{ hero_title | default(title) }}</h1>
      {% if hero_sub %}
        <p class="hero-sub">{{ hero_sub }}</p>
      {% endif %}
    </section>

    {{ content | safe }}
  </main>

  {% include "footer.njk" %}
</body>
</html>
